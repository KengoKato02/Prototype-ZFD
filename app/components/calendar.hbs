<div class="flex h-full flex-col">
  <header class="flex flex-none items-center justify-between border-b border-gray-200 px-6 py-4">
    <h1 class="text-base font-semibold leading-6 text-gray-900">
      <time datetime="2022-01">{{this.activeMonthName}} {{this.currentYear}}</time>
    </h1>
    <div class="flex items-center">
      
      <div class="relative flex items-center rounded-md bg-white shadow-sm md:items-stretch">
        <button type="button" {{on 'click' this.previousWeek}} class="flex h-9 w-12 items-center justify-center rounded-l-md border-y border-l border-gray-300 pr-1 text-gray-400 hover:text-gray-500 focus:relative md:w-9 md:pr-0 md:hover:bg-gray-50">
          <span class="sr-only">Last Month</span>
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
          </svg>
        </button>
        <button type="button" class="hidden border-y border-gray-300 px-3.5 text-sm font-semibold text-gray-900 hover:bg-gray-50 focus:relative md:block">Week {{this.currentWeekYear}}</button>
        <span class="relative -mx-px h-5 w-px bg-gray-300 md:hidden"></span>
        <button type="button" {{on 'click' this.nextWeek}} class="flex h-9 w-12 items-center justify-center rounded-r-md border-y border-r border-gray-300 pl-1 text-gray-400 hover:text-gray-500 focus:relative md:w-9 md:pl-0 md:hover:bg-gray-50">
          <span class="sr-only">Next Month</span>
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>

      <div class="hidden md:ml-4 md:flex md:items-center">
        <button 
          type="button" 
          {{on 'click' this.toggleBookHoliday}}
          class="ml-6 rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500"
          >Book Holiday</button>
      </div>

      {{#if this.isModalOpen}}
        <ModalDialog @translucentOverlay={{true}}>
          <BookHolidayModal
            @toggleBookHoliday={{this.toggleBookHoliday}}
          />  
        </ModalDialog>
      {{/if}}

      <div class="relative ml-6 md:hidden">
        <button type="button" class="-mx-2 flex items-center rounded-full border border-transparent p-2 text-gray-400 hover:text-gray-500" id="menu-0-button" aria-expanded="false" aria-haspopup="true">
          <span class="sr-only">Open menu</span>
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M3 10a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM8.5 10a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM15.5 8.5a1.5 1.5 0 100 3 1.5 1.5 0 000-3z" />
          </svg>
        </button>

      </div>
    </div>
  </header>
  
  <div class="isolate flex flex-auto flex-col overflow-auto-x bg-white">
    <div style="width: 100%" class="flex max-w-full flex-none flex-col sm:max-w-none md:max-w-full">

      <div class="sticky top-0 z-30 flex-none bg-white shadow ring-1 ring-black ring-opacity-5 sm:pr-8">

        {{#if (eq this.currentWeek 1)}}

        <div class="-mr-px hidden grid-cols-7 divide-x divide-gray-100 border-r border-gray-100 text-sm leading-6 text-gray-500 sm:grid">
          <div class="col-end-1 w-64 flex items-center">
            <span class="flex items-center justfy-center pl-8 text-gray-900 font-semibold">Employees</span>
          </div>
          {{#each this.firstWeek as |day|}}
            
            {{log day.month}}
            {{#if (and (eq day.dayNumber this.currentDay) (eq day.month this.currentMonth))}}
              <div class="flex items-center justify-center py-3">
                <span class="flex items-baseline">{{day.dayLabel}} <span class="ml-1.5 flex h-8 w-8 items-center justify-center rounded-full bg-indigo-600 font-semibold text-white">{{day.dayNumber}}</span></span>
              </div>
            {{else}}
              <div class="flex items-center justify-center py-3">
                <span>{{day.dayLabel}} <span class="items-center justify-center font-semibold text-gray-900">{{day.dayNumber}}</span></span>
              </div>
            {{/if}}
          {{/each}}
        </div>

        {{/if}}

        {{#if (eq this.currentWeek 2)}}

        <div class="-mr-px hidden grid-cols-7 divide-x divide-gray-100 border-r border-gray-100 text-sm leading-6 text-gray-500 sm:grid">
          <div class="col-end-1 w-64 flex items-center">
            <span class="flex items-center justfy-center pl-8 text-gray-900 font-semibold">Employees</span>
          </div>
          {{#each this.secondWeek as |day|}}
            {{#if (and (eq day.dayNumber this.currentDay) (eq day.month this.currentMonth))}}
              <div class="flex items-center justify-center py-3">
                <span class="flex items-baseline">{{day.dayLabel}} <span class="ml-1.5 flex h-8 w-8 items-center justify-center rounded-full bg-indigo-600 font-semibold text-white">{{day.dayNumber}}</span></span>
              </div>
            {{else}}
              <div class="flex items-center justify-center py-3">
                <span>{{day.dayLabel}} <span class="items-center justify-center font-semibold text-gray-900">{{day.dayNumber}}</span></span>
              </div>
            {{/if}}
          {{/each}}
        </div>

        {{/if}}

        {{#if (eq this.currentWeek 3)}}

        <div class="-mr-px hidden grid-cols-7 divide-x divide-gray-100 border-r border-gray-100 text-sm leading-6 text-gray-500 sm:grid">
          <div class="col-end-1 w-64 flex items-center">
            <span class="flex items-center justfy-center pl-8 text-gray-900 font-semibold">Employees</span>
          </div>
          {{#each this.thirdWeek as |day|}}
            {{#if (and (eq day.dayNumber this.currentDay) (eq day.month this.currentMonth))}}
              <div class="flex items-center justify-center py-3">
                <span class="flex items-baseline">{{day.dayLabel}} <span class="ml-1.5 flex h-8 w-8 items-center justify-center rounded-full bg-indigo-600 font-semibold text-white">{{day.dayNumber}}</span></span>
              </div>
            {{else}}
              <div class="flex items-center justify-center py-3">
                <span>{{day.dayLabel}} <span class="items-center justify-center font-semibold text-gray-900">{{day.dayNumber}}</span></span>
              </div>
            {{/if}}
          {{/each}}
        </div>

        {{/if}}

        {{#if (eq this.currentWeek 4)}}

        <div class="-mr-px hidden grid-cols-7 divide-x divide-gray-100 border-r border-gray-100 text-sm leading-6 text-gray-500 sm:grid">
          <div class="col-end-1 w-64 flex items-center">
            <span class="flex items-center justfy-center pl-8 text-gray-900 font-semibold">Employees</span>
          </div>
          {{#each this.fourthWeek as |day|}}
            
            {{#if (and (eq day.dayNumber this.currentDay) (eq day.month this.currentMonth))}}
              <div class="flex items-center justify-center py-3">
                <span class="flex items-baseline">{{day.dayLabel}} <span class="ml-1.5 flex h-8 w-8 items-center justify-center rounded-full bg-indigo-600 font-semibold text-white">{{day.dayNumber}}</span></span>
              </div>
            {{else}}
              <div class="flex items-center justify-center py-3">
                <span>{{day.dayLabel}} <span class="items-center justify-center font-semibold text-gray-900">{{day.dayNumber}}</span></span>
              </div>
            {{/if}}
          {{/each}}
        </div>

        {{/if}}

        {{#if (eq this.currentWeek 5)}}

        <div class="-mr-px hidden grid-cols-7 divide-x divide-gray-100 border-r border-gray-100 text-sm leading-6 text-gray-500 sm:grid">
          <div class="col-end-1 w-64 flex items-center">
            <span class="flex items-center justfy-center pl-8 text-gray-900 font-semibold">Employees</span>
          </div>
          {{#each this.fifthWeek as |day|}}
          
          
            {{#if (and (eq day.dayNumber this.currentDay) (eq day.month this.currentMonth))}}
              <div class="flex items-center justify-center py-3">
                <span class="flex items-baseline">{{day.dayLabel}} <span class="ml-1.5 flex h-8 w-8 items-center justify-center rounded-full bg-indigo-600 font-semibold text-white">{{day.dayNumber}}</span></span>
              </div>
            {{else}}
              <div class="flex items-center justify-center py-3">
                <span>{{day.dayLabel}} <span class="items-center justify-center font-semibold text-gray-900">{{day.dayNumber}}</span></span>
              </div>
            {{/if}}
          {{/each}}
        </div>

        {{/if}}

      </div>

      <div class="flex flex-auto h-fit">
        <div class="sticky left-0 z-10 w-64 flex-none bg-white ring-1 ring-gray-100"></div>
        
        <div class="grid flex-auto grid-cols-1 grid-rows-1">
          {{!-- Horizontal lines --}}
        <div class="col-start-1 col-end-2 row-start-1 grid divide-y divide-gray-100" style="grid-template-rows: repeat(4, minmax(3.5rem, 1fr))">
          
          {{#each this.employee.employees as |employee|}}
            <div class="-ml-56 -mt-2.5">
              <li class="relative flex space-x-6 py-6 w-fit left-0 z-20">
                <img src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="" class="h-10 w-10 flex-none rounded-full">
                <div class="flex-auto">
                  <h3 class="pr-10 font-semibold text-gray-900 xl:pr-0">{{employee.first_name}} {{employee.last_name}}</h3>
                  <dl class="mt-2 flex flex-col text-gray-500 xl:flex-row">

                    <div class="flex items-start space-x-3">
                      <dt class="mt-0.5">
                        <span class="sr-only">{{employee.role}}</span>
                        <svg class="h-6 w-6 shrink-0 text-gray-400 group-hover:text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                        </svg>
                      </dt>
                      <dd>{{employee.role}}</dd>
                    </div>
                  </dl>
                </div>
              </li>
            </div> 
          {{/each}}

          <div class="-ml-56 -mt-2.5">
            <li class="relative flex text-center items-center justify-center space-x-6 py-6 w-fit left-0 z-20">
              <button type="button" {{on 'click' this.toggleSidePanel}}class="rounded-full bg-indigo-600 p-2 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
                </svg>
              </button>
              <div class="flex-auto">
                <h3 class="pr-10 font-semibold text-indigo-500 xl:pr-0">Add employee</h3>
                <dl class="flex flex-col text-gray-500 xl:flex-row">
                </dl>
              </div>
            </li>
          </div> 

          <div></div>
          


        </div>

          {{!-- Vertical lines --}}
          <div class="col-start-1 col-end-2 row-start-1 hidden grid-cols-7 grid-rows-1 divide-x divide-gray-100 sm:grid sm:grid-cols-7">
            <div class="col-start-1 row-span-full"></div>
            <div class="col-start-2 row-span-full"></div>
            <div class="col-start-3 row-span-full"></div>
            <div class="col-start-4 row-span-full"></div>
            <div class="col-start-5 row-span-full"></div>
            <div class="col-start-6 row-span-full"></div>
            <div class="col-start-7 row-span-full"></div>
            <div class="col-start-8 row-span-full w-8"></div>
          </div>

          {{!-- Events --}}
          <ol class="col-start-1 col-end-2 row-start-1 grid grid-cols-1 sm:grid-cols-7 sm:pr-8" style="grid-template-rows: 3rem repeat(288, minmax(0, 1fr)) auto">
            
            {{!-- <li class="relative mt-px flex sm:col-start-3" style="grid-row: 60 / span 32">
              <a href="#" class="group absolute inset-1 flex flex-col overflow-y-auto rounded-lg bg-blue-50 p-2 text-xs leading-5 hover:bg-blue-100">
                <p class="order-1 font-semibold text-blue-700">Lieue Day</p>
                <p class="text-blue-500 group-hover:text-blue-700"><time datetime="2022-01-12T06:00">6:00 AM</time></p>
              </a>
            </li> --}}

            {{#each this.shownEvents as |event|}}
              <li class="relative mt-px hidden col-start-2 col-span-{{event.dayDiff}} flex" style="grid-row: 1 / span 32">
                <a href="#" class="group absolute inset-1 flex flex-col overflow-y-auto rounded-lg bg-pink-50 p-2 text-xs leading-5 hover:bg-pink-100">
                  <p class="order-1 font-semibold text-pink-700">{{event.holiday_type}}</p>
                  <p class="text-pink-500 group-hover:text-pink-700"><time datetime="2022-01-12T07:30">{{event.start_date}} - {{event.end_date}}</time></p>
                </a>
              </li>
            {{/each}}

            {{!-- <li class="relative mt-px hidden col-start-3 col-end-4 flex" style="grid-row: 1 / span 32">
              <a href="#" class="group absolute inset-1 flex flex-col overflow-y-auto rounded-lg bg-pink-50 p-2 text-xs leading-5 hover:bg-pink-100">
                <p class="order-1 font-semibold text-pink-700">Lieu Day</p>
                <p class="text-pink-500 group-hover:text-pink-700"><time datetime="2022-01-12T07:30">28th-28th</time></p>
              </a>
            </li> --}}

            <li class="relative mt-px hidden sm:col-start-1 col-span-7 sm:flex" style="grid-row: 1 / span 32">
              <a href="#" class="group absolute inset-1 flex flex-col overflow-y-auto rounded-lg bg-gray-100 p-2 text-xs leading-5 hover:bg-gray-200">
                <p class="order-1 font-semibold text-gray-700">Christmas</p>
                <p class="text-gray-500 group-hover:text-gray-700"><time datetime="2023-11-27T10:00">27th-27th</time></p>
              </a>
            </li>

            <li class="relative mt-px hidden sm:col-start-7 sm:flex" style="grid-row: 30 / span 62">
              <a href="#" class="group absolute inset-1 flex flex-col overflow-y-auto rounded-lg bg-green-100 p-2 text-xs leading-5 hover:bg-gray-200">
                <p class="order-1 font-semibold text-green-700">Sick Leave</p>
                <p class="text-green-500 group-hover:text-green-700"><time datetime="2023-11-27T10:00">27th-27th</time></p>
              </a>
            </li>

            <li class="relative mt-px hidden sm:col-start-6 sm:flex" style="grid-row: 120 / span 62">
              <a href="#" class="group absolute inset-1 flex flex-col overflow-y-auto rounded-lg bg-green-100 p-2 text-xs leading-5 hover:bg-gray-200">
                <p class="order-1 font-semibold text-green-700">Sick Leave</p>
                <p class="text-green-500 group-hover:text-green-700"><time datetime="2023-11-27T10:00">27th-27th</time></p>
              </a>
            </li>

            <li class="relative mt-px hidden sm:col-start-6 sm:flex" style="grid-row: 220 / span 62">
              <a href="#" class="group absolute inset-1 flex flex-col overflow-y-auto rounded-lg bg-green-100 p-2 text-xs leading-5 hover:bg-gray-200">
                <p class="order-1 font-semibold text-green-700">Sick Leave</p>
                <p class="text-green-500 group-hover:text-green-700"><time datetime="2023-11-27T10:00">27th-27th</time></p>
              </a>
            </li>

          </ol>

        </div>
      </div>
    </div>
  </div>

  {{#if this.isSidePanelOpen}}
    <SidePanel
      @toggleSidePanel={{this.toggleSidePanel}}
    />
  {{/if}}
  
</div>

{{log this.fifthWeek}}